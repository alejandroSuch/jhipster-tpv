<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Product.
    -->
    <changeSet id="20160205161233" author="jhipster">
        <createTable tableName="product">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(13)">
                <constraints nullable="false" />
            </column>
            
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="description" type="varchar(255)"/>
            
            <column name="price_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="category_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="price_id"
                                 baseTableName="product"
                                 constraintName="fk_product_price_id"
                                 referencedColumnNames="id"
                                 referencedTableName="price"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="product"
                                 constraintName="fk_product_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <createTable tableName="product_discount">
            <column name="discounts_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="products_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="products_id, discounts_id" tableName="product_discount"/>

        <addForeignKeyConstraint baseColumnNames="products_id"
                                 baseTableName="product_discount"
                                 constraintName="fk_product_discount_discount_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="discounts_id"
                                 baseTableName="product_discount"
                                 constraintName="fk_product_discount_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="discount"/>
        
    </changeSet>
</databaseChangeLog>
